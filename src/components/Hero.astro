---
import config from "@config/config.json";
import social from "@config/social";

const socialItems = social.networks;
---

<section class="relative">
  <div class="mx-auto max-w-screen-lg px-4 pt-3 sm:px-6 pb-4 sm:pb-6 lg:px-8">
    <div class="flex items-start justify-between">
      <div class="w-full lg:w-4/5 xl:w-3/4 animate-fade-in-up">
        <h1
          class="text-xl md:text-2xl lg:text-3xl font-black text-zinc-900 dark:text-white mb-0 bg-gradient-to-r from-orange-600 via-orange-500 to-orange-600 dark:from-orange-400 dark:via-orange-300 dark:to-orange-400 bg-clip-text text-transparent tracking-tight leading-tight"
        >
          {config.author.name}
        </h1>
        <p class="mt-2 text-sm md:text-base text-zinc-600 dark:text-zinc-300 leading-snug max-w-3xl font-normal">
          {config.author.bio}
        </p>
        <div class="flex space-x-4 pt-3 m-auto">
          {
            socialItems?.map((item) => (
              <a 
                href={item.url} 
                target="_blank" 
                rel="noopener noreferrer"
                class="transform transition-all duration-300 hover:scale-125 hover:-translate-y-1 opacity-70 hover:opacity-100"
              >
                <figure class="w-5 h-5 md:w-6 md:h-6 text-zinc-700 dark:text-zinc-300 hover:text-orange-600 dark:hover:text-orange-400 transition-colors duration-300">
                  <Fragment set:html={item.svg} />
                </figure>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
