---
import { Image } from 'astro:assets';
import logoLight from '../assets/logoLight.png';
import logoDark from '../assets/logoDark.png';
import menu from '@config/menu.json';
import config from '@config/config.json';
import HamburgerIcon from '@icons/HamburgerIcon.astro';
import CloseIcon from '@icons/CloseIcon.astro';
import HomeIcon from '@icons/HomeIcon.astro';
import ThemeIcon from '@components/ThemeIcon.astro';

export interface NavigationLink {
  name: string;
  url: string;
}

const { main }: { main: NavigationLink[] } = menu;
---

<header class="sticky top-0 z-50 backdrop-blur-md bg-white/60 dark:bg-zinc-900/60 transition-all duration-300">
  <div class="mx-auto max-w-screen-lg px-4 py-4 sm:px-6 sm:py-6 lg:px-8">
  <div class="flex items-center justify-between gap-2 sm:gap-4 md:items-center">
      <div class="block dark:hidden">
        <a href="/" class="logo flex items-center" aria-current="page">
          <figure>
            <Image
              src={logoLight}
              alt={config.site.title}
              class="w-20 rounded transition-transform duration-300 hover:scale-110"
              width={500}
              height={200}
              decoding="async"
              loading="eager"
            />
          </figure>
        </a>
      </div>
      <div class="hidden dark:block">
        <a href="/" class="logo flex items-center" aria-current="page">
          <figure>
            <Image
              src={logoDark}
              alt={config.site.title}
              class="w-28 rounded transition-transform duration-300 hover:scale-110 drop-shadow-[0_0_10px_rgba(255,107,53,0.3)]"
              width={500}
              height={200}
              decoding="async"
              loading="eager"
            />
          </figure>
        </a>
      </div>
      <div class="relative order-3 flex">
        <!-- navbar toggler -->
        <input id="nav-toggle" type="checkbox" class="hidden" />
        <label
          id="show-button"
          for="nav-toggle"
          class="order-2 flex cursor-pointer items-center md:hidden"
        >
          <HamburgerIcon />
        </label>
        <label id="hide-button" for="nav-toggle" class="order-2 hidden cursor-pointer items-center">
          <CloseIcon />
        </label>
        <!-- /navbar toggler -->
        <div
          id="nav-menu"
          class="absolute right-0 top-8 z-10 mt-2 hidden w-44 divide-y divide-zinc-100 rounded-xl border border-zinc-200/50 bg-white/95 backdrop-blur-lg p-2 shadow-2xl dark:border-zinc-700/50 dark:bg-zinc-800/95 transition-all duration-300"
        >
          <ul class="py-2 text-sm">
            {
              main?.map((menu) => (
                <li>
                  <a
                    href={menu?.url}
                    class={`block rounded-lg px-4 py-2 text-sm hover:bg-orange-50 dark:hover:bg-orange-900/20 hover:text-orange-600 dark:hover:text-orange-400 transition-all duration-300 ${
                      menu?.url === '/ExploradorCampus' ? 'font-semibold' : ''
                    }`}
                    onclick={
                      menu?.url === '/CalculadoraNotas'
                        ? "event.preventDefault(); window.location.href='/CalculadoraNotas';"
                        : null
                    }
                  >
                    {menu?.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
  <ul class="hidden items-center gap-2 md:flex lg:flex mx-auto">
        {
          main?.map((menu) => (
            <li class="text-sm font-semibold transition-all">
              <a
                href={menu?.url}
                class="relative flex items-center px-3 py-2 rounded-lg hover:bg-orange-50 dark:hover:bg-orange-900/20 hover:text-orange-600 dark:hover:text-orange-400 transition-all duration-200 whitespace-nowrap text-zinc-700 dark:text-zinc-300"
                onclick={
                  menu?.url === '/CalculadoraNotas'
                    ? "event.preventDefault(); window.location.href='/CalculadoraNotas';"
                    : null
                }
              >
                {menu?.name === 'Home' ? <HomeIcon /> : menu?.name}
              </a>
            </li>
          ))
        }
      </ul>


      {config.features.dark_mode && <ThemeIcon />}
    </div>
  </div>
</header>