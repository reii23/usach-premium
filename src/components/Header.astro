---
import { Image } from 'astro:assets';
import logoLight from '../assets/logoLight.png';
import logoDark from '../assets/logoDark.png';
import menu from '@config/menu.json';
import config from '@config/config.json';
import HamburgerIcon from '@icons/HamburgerIcon.astro';
import CloseIcon from '@icons/CloseIcon.astro';
import HomeIcon from '@icons/HomeIcon.astro';
import ThemeIcon from '@components/ThemeIcon.astro';

export interface NavigationLink {
  name: string;
  url: string;
}

const { main }: { main: NavigationLink[] } = menu;
---

<header class="bg-zinc-50 dark:bg-zinc-900">
  <div class="mx-auto max-w-screen-lg px-4 py-8 sm:px-6 sm:py-12 lg:px-8">
  <div class="flex items-center justify-between gap-2 sm:gap-4 md:items-center">
      <div class="block dark:hidden">
        <a href="/" class="logo flex items-center" aria-current="page">
          <figure>
            <Image
              src={logoLight}
              alt={config.site.title}
      class="w-20 rounded"
              width={500}
              height={200}
              decoding="async"
              loading="eager"
            />
          </figure>
        </a>
      </div>
      <div class="hidden dark:block">
        <a href="/" class="logo flex items-center" aria-current="page">
          <figure>
            <Image
              src={logoDark}
              alt={config.site.title}
      class="w-28 rounded"
              width={500}
              height={200}
              decoding="async"
              loading="eager"
            />
          </figure>
        </a>
      </div>
      <div class="relative order-3 flex">
        <!-- navbar toggler -->
        <input id="nav-toggle" type="checkbox" class="hidden" />
        <label
          id="show-button"
          for="nav-toggle"
          class="order-2 flex cursor-pointer items-center md:hidden"
        >
          <HamburgerIcon />
        </label>
        <label id="hide-button" for="nav-toggle" class="order-2 hidden cursor-pointer items-center">
          <CloseIcon />
        </label>
        <!-- /navbar toggler -->
        <div
          id="nav-menu"
          class="absolute right-0 top-8 z-10 mt-2 hidden w-44 divide-y divide-zinc-100 rounded-md border border-zinc-100 bg-white p-2 shadow-lg dark:border-zinc-900 dark:bg-zinc-800"
        >
          <ul class="py-2 text-sm">
            {
              main?.map((menu) => (
                <li>
                  <a
                    href={menu?.url}
                    class={`block rounded-lg px-4 py-2 text-sm hover:underline ${
                      menu?.url === '/ExploradorCampus' ? 'font-semibold' : ''
                    }`}
                    onclick={
                      menu?.url === '/CalculadoraNotas'
                        ? "event.preventDefault(); window.location.href='/CalculadoraNotas';"
                        : null
                    }
                  >
                    {menu?.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
  <ul class="hidden items-center gap-6 md:flex lg:flex mx-auto">
        {
          main?.map((menu) => (
            <li class={`text-md block rounded-lg px-2 py-2 transition-all ${
              menu?.url === '/ExploradorCampus' ? 'font-semibold' : ''
            }`}>
              <a
                href={menu?.url}
                class={`relative flex items-center ${
                  menu?.url === '/ExploradorCampus' ? 'px-3 py-1.5' : ''
                }`}
                onclick={
                  menu?.url === '/CalculadoraNotas'
                    ? "event.preventDefault(); window.location.href='/CalculadoraNotas';"
                    : null
                }
              >
                {menu?.name === 'Home' ? <HomeIcon /> : menu?.name}
              </a>
            </li>
          ))
        }
      </ul>


      {config.features.dark_mode && <ThemeIcon />}
    </div>
  </div>
</header>